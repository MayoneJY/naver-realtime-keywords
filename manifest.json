{
    "manifest_version": 2,
   
    "name": "naver-realtime-keywords",
    "description": "네이버 실시간 검색어 보기",
    "version": "1.0",
   
    "browser_action": {
        "default_title": "네이버 실시간 검색어",
        "default_popup": "views/popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "runt_at" : "document_start",
            "matches": [
                "https://www.naver.com/"
            ],
            "js": [
                "scripts/index.js"
            ],
            "css": [
                "styles/realtimekeywords.css"
            ]
        }
    ]
}